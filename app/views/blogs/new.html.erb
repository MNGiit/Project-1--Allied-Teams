<h1>Show Blog Post</h1>
<%= form_for @blog do |f| %>
  <!-- Blog Poster Name -->
  <%= f.label :author %>
  <%= f.text_field :author %><br>
  <!-- Blog Post Title -->
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <!-- Blog Post Content -->
  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <%= f.submit %>
<% end %>
